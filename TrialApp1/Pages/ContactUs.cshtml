@page
@model TrialApp1.Pages.ContactUsModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h1 class="text-center mb-4">Contact Us</h1>
            <p class="text-center lead mb-5">
                Have questions about our Renewable Energy Controller system? We're here to help!
                Fill out the form below and our team will get back to you as soon as possible.
            </p>

            @if (Model.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Thank you!</strong> @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row g-5">
                <!-- Contact Form -->
                <div class="col-md-7 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4 p-md-5">
                            <h2 class="card-title mb-4">Send Us a Message</h2>

                            <form method="post" id="contactForm">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <div class="mb-3">
                                    <label asp-for="Contact.FullName" class="form-label">Full Name</label>
                                    <input asp-for="Contact.FullName" class="form-control" placeholder="Your full name">
                                    <span asp-validation-for="Contact.FullName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Contact.Email" class="form-label">Email Address</label>
                                    <input asp-for="Contact.Email" class="form-control" placeholder="your.email@example.com">
                                    <span asp-validation-for="Contact.Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Contact.PhoneNumber" class="form-label">Phone Number <span class="text-muted">(Optional)</span></label>
                                    <input asp-for="Contact.PhoneNumber" class="form-control" placeholder="+1 (123) 456-7890">
                                    <span asp-validation-for="Contact.PhoneNumber" class="text-danger"></span>
                                    <div class="form-text">Include country code for international numbers</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Contact.Subject" class="form-label">Subject</label>
                                    <select asp-for="Contact.Subject" class="form-select">
                                        <option value="General Inquiry">General Inquiry</option>
                                        <option value="Technical Support">Technical Support</option>
                                        <option value="Business Opportunity">Business Opportunity</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Contact.Subject" class="text-danger"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Contact.Message" class="form-label">Message</label>
                                    <textarea asp-for="Contact.Message" class="form-control" rows="5" placeholder="Your message here..."></textarea>
                                    <span asp-validation-for="Contact.Message" class="text-danger"></span>
                                </div>

                                <!-- Honeypot field for spam prevention (hidden from users) -->
                                <div class="d-none">
                                    <input asp-for="Contact.HoneypotField" class="form-control">
                                </div>

                                <div class="mb-4 form-check">
                                    <input asp-for="Contact.NotRobot" class="form-check-input">
                                    <label asp-for="Contact.NotRobot" class="form-check-label">I'm not a robot</label>
                                    <span asp-validation-for="Contact.NotRobot" class="text-danger"></span>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="col-md-5">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body p-4 p-md-5">
                            <h2 class="card-title mb-4">Contact Information</h2>

                            <div class="d-flex align-items-start mb-4">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                        <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                        <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                    </svg>
                                </div>
                                <div>
                                    <h5 class="mb-1">Address</h5>
                                    <p class="mb-0">123 Energy Way<br>Sustainable City, SC 12345<br>United States</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start mb-4">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                    </svg>
                                </div>
                                <div>
                                    <h5 class="mb-1">Email</h5>
                                    <p class="mb-0">info@renewablecontroller.com</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start mb-4">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                                        <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                    </svg>
                                </div>
                                <div>
                                    <h5 class="mb-1">Phone</h5>
                                    <p class="mb-0">(555) 123-4567</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start mb-4">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                                        <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
                                    </svg>
                                </div>
                                <div>
                                    <h5 class="mb-1">Business Hours</h5>
                                    <p class="mb-0">Monday - Friday: 9:00 AM - 5:00 PM<br>Weekends: Closed</p>
                                </div>
                            </div>

                            <!-- Map Placeholder -->
                            <div class="mt-4">
                                <div class="bg-light rounded p-3 text-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-map mb-2" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M15.817.113A.5.5 0 0 1 16 .5v14a.5.5 0 0 1-.402.49l-5 1a.502.502 0 0 1-.196 0L5.5 15.01l-4.902.98A.5.5 0 0 1 0 15.5v-14a.5.5 0 0 1 .402-.49l5-1a.5.5 0 0 1 .196 0L10.5.99l4.902-.98a.5.5 0 0 1 .415.103zM10 1.91l-4-.8v12.98l4 .8V1.91zm1 12.98 4-.8V1.11l-4 .8v12.98zm-6-.8V1.11l-4 .8v12.98l4-.8z" />
                                    </svg>
                                    <p class="mb-1">Find us on the map</p>
                                    <a href="#" class="btn btn-outline-primary btn-sm">Open Map</a>
                                </div>
                            </div>

                            <!-- FAQ Link -->
                            <div class="mt-4 text-center">
                                <p>Have general questions?</p>
                                <a href="#" class="btn btn-outline-secondary">Visit our FAQ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Highlight each field when focused
        document.querySelectorAll('.form-control, .form-select').forEach(field => {
            field.addEventListener('focus', function() {
                this.parentElement.classList.add('border-start', 'border-4', 'border-primary', 'ps-2');
            });
            field.addEventListener('blur', function() {
                this.parentElement.classList.remove('border-start', 'border-4', 'border-primary', 'ps-2');
            });
        });
    </script>
}